<div id="<%= dom_id task %>">
    <p>
        <strong>Title:</strong>
        <%= task.title %>
    </p>

    <p>
        <strong>Description:</strong>
        <%= task.description %>
    </p>

    <p>
        <strong>Due on:</strong>
        <%= task.due_on %>
    </p>

    <p>
        <strong>Status:</strong>
        <%= t("activerecord.attributes.task.statuses.#{task.status}") %>
    </p>

    <p>
        <strong>Priority:</strong>
        <%= t("activerecord.attributes.task.priorities.#{task.priority}") %>
    </p>

</div>